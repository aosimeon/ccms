{
    "root": true,
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "import/prefer-default-export": "off"
    }
}
